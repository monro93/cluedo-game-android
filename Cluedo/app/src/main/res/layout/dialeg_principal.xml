<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugador"
        android:id="@+id/jugador"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp" />

    <Button
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:text="TIRAR DADO"
        android:id="@+id/btnDau"
        android:layout_gravity="center_horizontal"
        android:background="#E9E9E9E9"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:text="BLOC DE NOTAS"
        android:id="@+id/btnNotes"
        android:layout_gravity="center_horizontal"
        android:background="#E9E9E9" />

    <Button
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:text="PASILLO SECRETO"
        android:id="@+id/btnPassadis"
        android:layout_gravity="center_horizontal"
        android:background="#E9E9E9"
        android:visibility="gone"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:text="PASAR TURNO"
        android:id="@+id/btnTorn"
        android:layout_gravity="center_horizontal"
        android:background="#E9E9E9"
        android:layout_margin="5dp" />
</LinearLayout>